{
  "type": "symfony-bundle",
  "name": "jav/apitopia-bundle",
  "description": "APIs made simpler",
  "license": "MIT",
  "keywords": [
    "symfony",
    "api",
    "rest",
    "graphql"
  ],
  "version": "1.0",
  "authors": [
    {
      "name": "Jérémy Vienne",
      "email": "jeremyvienne@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "ecodev/graphql-upload": "^7.0",
    "ivome/graphql-relay-php": "dev-master",
    "nyholm/psr7": ">=1.6",
    "symfony/routing": ">=5.4",
    "symfony/dependency-injection": ">=5.4",
    "symfony/http-kernel": ">=5.4",
    "symfony/config": ">=5.4",
    "symfony/serializer": ">=5.4",
    "symfony/property-access": ">=5.4",
    "symfony/psr-http-message-bridge": "^2.2",
    "symfony/console": ">=5.4",
    "symfony/finder": ">=5.4",
    "symfony/http-client": ">=5.4",
    "symfony/mime": ">=5.4",
    "symfony/framework-bundle": ">=5.4",
    "symfony/twig-bundle": ">=5.4",
    "doctrine/annotations": "^2.0",
    "phpdocumentor/reflection-docblock": "^5.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "nyholm/symfony-bundle-test": "^2.0",
    "matthiasnoback/symfony-dependency-injection-test": "^4.3",
    "symfony/phpunit-bridge": "^6.2",
    "symfony/browser-kit": "^6.2"
  },
  "autoload": {
    "psr-4": {
      "Jav\\ApiTopiaBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jav\\ApiTopiaBundle\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {"type":  "vcs", "url":  "git@github.com:otzy/graphql-relay-php.git"}
  ],
  "scripts": {
    "sniffer:php8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1"
  }
}
